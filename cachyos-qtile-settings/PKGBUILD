pkgname=cachyos-qtile-settings
pkgdesc='CachyOS Qtile settings'
pkgver=1.5
pkgrel=1
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=('GPL')
makedepends=('coreutils')
_commit="be2d80aa76d074021917d213023d4375a23f87a4"
source=("git+https://github.com/CachyOS/$pkgname.git#commit=${_commit}")
sha512sums=('SKIP')
depends=('picom'
         'wired'
         'rofi'
         'thunar'
         'alacritty'
         'python-psutil'
         'python-setuptools'
         'polkit-gnome'
         'feh'
         'qt5ct'
         'noto-fonts'
         'ttf-fira-sans'
         'ttf-font-awesome'
         'ttf-ibm-plex'
         'char-white'
         'capitaine-cursors'
         'flameshot'
         'gnome-themes-extra'
         'cachyos-wallpapers'
         'gtk-engines'
         'gtk-engine-murrine')
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d $pkgdir/etc
    cp -rf $srcdir/$pkgname/etc $pkgdir
}
