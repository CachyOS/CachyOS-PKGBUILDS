pkgname=cachyos-qtile-settings
pkgdesc='CachyOS Qtile settings'
pkgver=1.9
pkgrel=1
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=(GPL-1.0-only)
makedepends=('coreutils' 'git')
_commit="01df7c63d3d3cdd60df7b71c624e5d98cb44b41f"
source=("git+https://github.com/CachyOS/$pkgname.git#commit=${_commit}")
sha512sums=('151efa7bea7079edb045d38f4095b24e9a71858525008bbea7ce78ac826b78664edf50a787133f1c13cb8a07cf63581e23d95b9e1f6924d1b9b469c1f9c10335')
depends=('picom'
         'wired'
         'rofi'
         'thunar'
         'alacritty'
         'python-psutil'
         'python-setuptools'
         'polkit-gnome'
         'gnome-keyring'
         'feh'
         'qt5ct'
         'noto-fonts'
         'ttf-fira-sans'
         'ttf-font-awesome'
         'ttf-ibm-plex'
         'ttf-roboto'
         'char-white'
         'capitaine-cursors'
         'flameshot'
         'gnome-themes-extra'
         'cachyos-wallpapers'
         'gtk-engines'
         'gtk-engine-murrine'
         'thunar-archive-plugin'
         'file-roller'
         'p7zip'
         'python-pulsectl-asyncio'
         'python-setproctitle'
         'playerctl'
         'xf86-video-amdgpu'
         'network-manager-applet')
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d "$pkgdir/etc"
    cp -rf "$srcdir/$pkgname/etc" "$pkgdir"
    install -d "$pkgdir/usr/share/icons"
    cp -rf "$srcdir/$pkgname/usr/share/icons" "$pkgdir/usr/share"
    install -d "$pkgdir/usr/share/themes"
    cp -rf "$srcdir/$pkgname/usr/share/themes" "$pkgdir/usr/share"
}
