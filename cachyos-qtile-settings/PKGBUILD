pkgname=cachyos-qtile-settings
pkgdesc='CachyOS Qtile settings'
pkgver=1.9
pkgrel=2
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=(GPL-1.0-only)
makedepends=('coreutils' 'git')
_commit="fd3ffa7a38576ea74aaa091f47c81b16dbf4e3ed"
source=("git+https://github.com/CachyOS/$pkgname.git#commit=${_commit}")
sha512sums=('15a03a188e92c8dd1c78a24894db0793a5a2f79e0ffaabe9468e02dabaa9e8194671df5dc6e6368df591f5bbcdd938b3d3c5204eb582a49011958a7a6b039b05')
depends=('picom'
         'wired'
         'rofi'
         'thunar'
         'alacritty'
         'python-psutil'
         'python-setuptools'
         'polkit-gnome'
         'gnome-keyring'
         'feh'
         'qt5ct'
         'noto-fonts'
         'ttf-fira-sans'
         'ttf-font-awesome'
         'ttf-ibm-plex'
         'ttf-roboto'
         'char-white'
         'capitaine-cursors'
         'flameshot'
         'gnome-themes-extra'
         'cachyos-wallpapers'
         'gtk-engines'
         'gtk-engine-murrine'
         'thunar-archive-plugin'
         'file-roller'
         'p7zip'
         'python-pulsectl-asyncio'
         'python-setproctitle'
         'playerctl'
         'xf86-video-amdgpu'
         'network-manager-applet')
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d "$pkgdir/etc"
    cp -rf "$srcdir/$pkgname/etc" "$pkgdir"
    install -d "$pkgdir/usr/share/icons"
    cp -rf "$srcdir/$pkgname/usr/share/icons" "$pkgdir/usr/share"
    install -d "$pkgdir/usr/share/themes"
    cp -rf "$srcdir/$pkgname/usr/share/themes" "$pkgdir/usr/share"
}
