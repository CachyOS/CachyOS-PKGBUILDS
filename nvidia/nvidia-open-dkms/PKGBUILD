depends=("nvidia-utils" 'libglvnd')
license=('MIT AND GPL-2.0-only')
source=("$pkgname-$pkgver.tar.gz::https://github.com/NVIDIA/open-gpu-kernel-modules/archive/refs/tags/${pkgver}.tar.gz"
