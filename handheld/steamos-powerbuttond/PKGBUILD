sha512sums=('5b4303f6bffbdff2a0488a50f4c85f48c9f1bd7bc447b4c75e8b2dbe23577674f84e08ed2fc81a6e7ea32a8940f70647462f38373208e8f77eca35c0a9f7fc66')
provides=("powerbuttond")
conflicts=("powerbuttond")
