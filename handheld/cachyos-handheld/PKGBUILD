source=(git+https://github.com/CachyOS/CachyOS-Handheld#commit=dfd3ec9e129ab4bf6dadf5fae7fb53cb155b2349)
install="$pkgname.install"
options=(!strip !debug)
provides=('cachyos-deckify')
replaces=('cachyos-deckify')
sha256sums=('2cadc48752cfdce517bfa7068b67941404f70ecb0b564294411ff257379de3df')
