pkgname=(
  mutter-cachyos
  mutter-cachyos-docs
)
pkgver=47.0
pkgrel=1
pkgdesc="Window manager and compositor for GNOME (patched version from CachyOS)"
url="https://gitlab.gnome.org/GNOME/mutter"
arch=(x86_64)
license=(GPL-2.0-or-later)
depends=(
